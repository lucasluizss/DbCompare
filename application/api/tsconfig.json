{
	"compilerOptions": {
			"module": "commonjs",
			"esModuleInterop": true,
			"target": "es6",
			"noImplicitAny": false,
			"moduleResolution": "node",
			"resolveJsonModule": true,
			"sourceMap": true,
			"outDir": "dist",
			"baseUrl": ".",
			"experimentalDecorators": true,
			"emitDecoratorMetadata": true,
			"types": [
				"reflect-metadata"
			],
			"paths": {
					"*": [
							"node_modules/*"
					]
			}
	},
	"include": [
			"src/**/*"
	]
}